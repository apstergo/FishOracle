<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fishphone.ManualAll">
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <SearchBar Grid.Row="0" Placeholder="Поиск" TextChanged="SearchBar_TextChanged"/>
        <ListView Grid.Row="1" x:Name="ListFish" SeparatorVisibility="None" ItemTapped="ListFish_ItemTapped" BackgroundColor="White">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell
                        ImageSource="{Binding pictureref}"
                        Text="{Binding nameitem}"
                        Detail="{Binding opis}"
                        TextColor="#454752"
                        />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ImageButton x:Name="baner" Grid.Row="2" Aspect="AspectFill" Clicked="Baner_Clicked" Source="https://pbs.twimg.com/media/Cs95LjyXgAAf-YU.jpg"/>
    </Grid>
</ContentPage>